pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Compilar el programa Java
                sh 'javac src/Main.java'
            }
        }
        stage('Test') {
            steps {
                 script {
                    def mensaje = sh(script:'java -cp src Main',returnStdout: true).trim()
                    if (mensaje == "hola mundo,todo bien") {
                        echo "El mensaje es correcto"
                    } else {
                        echo "El mensaje es incorrecto"
                    }
               
            }
        }
    }
}
}
